@model MeuProjetoMVC.Models.ZetaJogos

<div class="container mt-4">
    <h2>Editar Jogo</h2>

    <form asp-action="Editar" method="post" enctype="multipart/form-data" class="mt-3">

        <!-- ID oculto -->
        <input type="hidden" asp-for="codZetaJ" />

        <!-- Nome -->
        <div class="mb-3">
            <label asp-for="nomeJogo" class="form-label">Nome do Jogo</label>
            <input asp-for="nomeJogo" class="form-control" required maxlength="100" />
            <span asp-validation-for="nomeJogo" class="text-danger"></span>
        </div>

        <!-- Categoria -->
        <div class="mb-3">
            <label asp-for="categoria" class="form-label">Categoria</label>

            <select asp-for="categoria" asp-items="ViewBag.Categorias" class="form-select">
                <option value="">Selecione</option>
            </select>

            <span asp-validation-for="categoria" class="text-danger"></span>
        </div>

        <!-- Classificação etária -->
        <div class="mb-3">
            <label asp-for="classificacaoEtaria" class="form-label">Classificação Etária</label>

            <select asp-for="classificacaoEtaria" class="form-select">
                <option value="L">Livre</option>
                <option value="10">10+</option>
                <option value="12">12+</option>
                <option value="14">14+</option>
                <option value="16">16+</option>
                <option value="18">18+</option>
            </select>

            <span asp-validation-for="classificacaoEtaria" class="text-danger"></span>
        </div>

        <!-- Nome da pasta nova -->
        <div class="mb-3">
            <label class="form-label">Nome da Pasta (opcional)</label>
            <input type="text" name="nomePasta" class="form-control" placeholder="Ex: NovoJogo" />
            <small class="text-muted">Se deixar vazio, o caminho atual será mantido.</small>
        </div>

        <!-- Capa atual -->
        <div class="mb-3">
            <label class="form-label">Capa Atual</label><br />

            @if (Model.Capa != null && Model.Capa.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Capa)" width="150" class="rounded shadow" />
            }
            else
            {
                <p class="text-muted">Nenhuma capa cadastrada.</p>
            }
        </div>

        <!-- Upload nova capa -->
        <div class="mb-3">
            <label class="form-label">Nova Capa (opcional)</label>
            <input type="file" name="novaImagem" class="form-control" accept="image/*" />
        </div>

        <input type="hidden" asp-for="@Model.caminhoJogo" />

        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>

    </form>
</div>
