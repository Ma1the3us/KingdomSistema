@model MeuProjetoMVC.Models.ZetaJogos
<link href="~/css/form.css" rel="stylesheet" />

<h2>Editar Jogo</h2>
<form asp-action="Editar" method="post" enctype="multipart/form-data" class="mt-3">
    <input type="hidden" asp-for="@Model.codZetaJ" />
    <input type="hidden" asp-for="@Model.caminhoJogo" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Nome do Jogo -->
    <div class="form-group">
        <label asp-for="nomeJogo" class="form-label"></label>
        <input asp-for="nomeJogo" class="form-control" required maxlength="100" />
        <span asp-validation-for="nomeJogo" class="text-danger"></span>
    </div>

    <!-- Classificação Etária -->
    <div class="form-group">
        <label>Classificação</label>
        <select asp-for="classificacaoEtaria" class="form-control">
            <option value="L" selected="@Model.classificacaoEtaria == " L"">Livre</option>
            <option value="10" selected="@Model.classificacaoEtaria == " 10"">10+</option>
            <option value="12" selected="@Model.classificacaoEtaria == " 12"">12+</option>
            <option value="14" selected="@Model.classificacaoEtaria == " 14"">14+</option>
            <option value="16" selected="@Model.classificacaoEtaria == " 16"">16+</option>
            <option value="18" selected="@Model.classificacaoEtaria == " 18"">18+</option>
        </select>
    </div>

    <!-- Categoria -->
    <div class="form-group">
        <label asp-for="categoria" class="form-label">Categoria</label>
        <select asp-for="categoria" asp-items="ViewBag.Categorias" class="form-select"></select>
        <span asp-validation-for="categoria" class="text-danger"></span>
    </div>

    <!-- Capa Atual -->
    @if (Model.Capa != null)
    {
        <div class="form-group">
            <label class="form-label">Capa Atual</label>
            <div>
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Capa))"
                     alt="@Model.nomeJogo" style="max-width:200px; max-height:200px;" />
            </div>
        </div>
    }

    <!-- Nova Imagem de Capa -->
    <div class="form-group">
        <label class="form-label">Alterar Imagem de Capa (opcional)</label>
        <input type="file" name="imagemCapa" class="form-control" />
    </div>

    <!-- Pasta do Jogo -->
    <div class="form-group">
        <label class="form-label">Atualizar Pasta do Jogo (opcional)</label>
        <input type="file"
               name="pastaJogo"
               class="form-control"
               webkitdirectory
               directory
               multiple />
        <small class="form-text text-muted">Se não enviar, mantém a pasta atual.</small>
    </div>

    <!-- Botões -->
    <div id="dBtn">
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>

</form>