@model IEnumerable<MeuProjetoMVC.Models.ItemSubcategoria>
@{
    ViewData["Title"] = "Subcategorias do Produto";
    var produto = ViewBag.Produto as MeuProjetoMVC.Models.Produto;
    var subcategorias = ViewBag.Subcategorias as List<MeuProjetoMVC.Models.Sub_Categoria>;
}


<h2 class="text-xl font-semibold mb-4">Vincular Subcategorias ao Produto</h2>


@if (produto != null)
{
    <div class="mb-4 p-3 bg-gray-100 rounded">
        <strong>Produto:</strong> @produto.nomeProduto (Código: @produto.codProd)
    </div>
}


<a asp-action="Cadastrar" asp-route-codProd="@ViewBag.codProd" class="btn btn-primary mb-3">Adicionar Subcategoria</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Subcategoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var nomeSub = subcategorias?.FirstOrDefault(s => s.codSub == item.codSub)?.nomeSubcategoria ?? "-";


            <tr>
                <td>@nomeSub</td>
                <td>
                    <form asp-action="Excluir" asp-route-codProd="@item.codProd" asp-route-codSub="@item.codSub" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Detalhes" asp-controller="Produto" asp-route-codProd="@(Model?.FirstOrDefault()?.codProd  ?? 0)">Voltar</a>