@model MeuProjetoMVC.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<link href="~/css/form.css" rel="stylesheet" />

<h2 class="text-center mt-4">Excluir Produto</h2>

@if (TempData["Mensagem"] != null)
{
    <p class="text-danger text-center">@TempData["Mensagem"]</p>
}

<form asp-action="Excluir" method="post">
    <p class="text-warning text-center mb-3">
        Tem certeza que deseja excluir o produto <strong>@Model.nomeProduto</strong>?
    </p>

    <input type="hidden" asp-for="codProd" />

    <section>
        <div>
            <label>Código:</label>
            <span>@Model.codProd</span>
        </div>

        <div>
            <label>Nome:</label>
            <span>@Model.nomeProduto</span>
        </div>

        <div>
            <label>Descrição:</label>
            <span>@(!string.IsNullOrEmpty(Model.Descricao) ? Model.Descricao : "Sem descrição")</span>
        </div>

        <div>
            <label>Quantidade:</label>
            <span>@Model.Quantidade</span>
        </div>

        <div>
            <label>Valor:</label>
            <span>R$ @Model.Valor</span>
        </div>

        @if (Model.Imagens != null && Model.Imagens.Length > 0)
        {
            <div>
                <label>Imagem:</label>
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Imagens))"
                     alt="Imagem do Produto" style="max-width:300px; max-height:300px;" />
            </div>
        }
    </section>

    <div class="mt-4 d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Confirmar</button>
        <a asp-action="List" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
