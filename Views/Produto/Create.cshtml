@model MeuProjetoMVC.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}
<link href="~/css/form.css" rel="stylesheet" />

<h2>Cadastrar Produto</h2>

@if (TempData["Mensagem"] != null)
{
    <p style="color:green;">@TempData["Mensagem"]</p>
}

<form asp-action="Create"
      method="post"
      enctype="multipart/form-data"
      class="w-50 mx-auto">

    <div class="mb-3">
        <label asp-for="nomeProduto" class="form-label">Nome do Produto:</label>
        <input asp-for="nomeProduto" class="form-control" required />
        <span asp-validation-for="nomeProduto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição:</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Valor" class="form-label">Preço (Valor):</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label">Quantidade:</label>
        <input asp-for="Quantidade" type="number" class="form-control" value="1" required />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <!-- CATEGORIA -->
    <div class="mb-3">
        <label asp-for="codCat" class="form-label">Categoria:</label>
        <select asp-for="codCat" asp-items="ViewBag.Categorias ?? new List<SelectListItem>()" class="form-select" required>
            <option value="">-- Selecione a Categoria --</option>
        </select>
        <span asp-validation-for="codCat" class="text-danger"></span>
    </div>

    <!-- FORNECEDOR -->
    <div class="mb-3">
        <label asp-for="codF" class="form-label">Fornecedor:</label>
        <select asp-for="codF" asp-items="ViewBag.Fornecedores ?? new List<SelectListItem>()" class="form-select" required>
            <option value="">-- Selecione o Fornecedor --</option>
        </select>
        <span asp-validation-for="codF" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem do Produto:</label>
        <input type="file" name="ImagemUpload" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar Produto</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}