@model MeuProjetoMVC.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}
<link href="~/css/form.css" rel="stylesheet" />

<h2>Editar Produto</h2>

@if (ViewBag.Mensagem != null)
{
    <p class="text-danger">@ViewBag.Mensagem</p>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="w-50 mx-auto mt-4" style="margin-bottom: 22.5%;">
    <input type="hidden" asp-for="codProd" />

    <div class="mb-3">
        <label asp-for="nomeProduto" class="form-label">Nome</label>
        <input asp-for="nomeProduto" class="form-control" />
        <span asp-validation-for="nomeProduto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label"></label>
        <input asp-for="Quantidade" class="form-control" type="number" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Valor" class="form-label"></label>
        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem Atual:</label><br />
        @if (Model.Imagens != null && Model.Imagens.Length > 0)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagens)"
                 alt="Imagem do Produto" width="150" />
        }
        else
        {
            <p>Sem imagem cadastrada.</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Alterar imagem:</label>
        <input type="file" name="ImagemUpload" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar alterações</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}