@model IEnumerable<MeuProjetoMVC.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
}
<link href="~/css/lista.css" rel="stylesheet" />

<h2>Categorias</h2>
@if (Model != null && Model.Any())
{
    <input type="text" id="txtBusca" placeholder="Pesquisar produto..." onkeyup="buscar()">
    <table>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome da Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Categoria item in Model)
            {
                <tr>
                    <td>@item.CodCat</td>
                    <td>@item.NomeCategoria</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Index" asp-controller="SubCategoria" asp-route-codCat="@item.CodCat">SubCategoria</a>
                        <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.CodCat">Editar</a>
                        <a class="btn btn-danger btn-sm" asp-action="Excluir" asp-route-id="@item.CodCat">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="pesquisa" style="display: none">
    </div>

}
else
{
    <p>Nenhuma categoria encontrada.</p>
}
<div style="display: flex; justify-content: center; margin-top: 10px;">
    <a class="btn btn-primary" asp-action="Criar">Nova Categoria</a>
</div>


<script>
     async function buscar()
    {
        const categoria = document.getElementById("txtBusca").value;
        
        const response = await fetch(`/Categorias/BuscarCategoria?nome=${encodeURIComponent(categoria)}`);

        data = await response.json();

        montarTabela(data.categorias);
    }

    async function montarTabela(data)
    {
        const tbody = document.querySelector("tbody");
        const div = document.getElementById("pesquisa");

        tbody.innerHTML="";
        div.innerHTML = "";


        if(data.length > 0)
        {
            document.querySelector("table").style.display = "table";
            data.forEach(c => {
            tbody.innerHTML +=`
              <tr>
                   <td>${c.codCat}</td>
                   <td>${c.nomeCategoria}</td>
                   <td>
                       <a class="btn btn-warning btn-sm" href="/SubCategoria/Index?codCat=${c.codCat}">SubCategoria</a>
                       <a class="btn btn-warning btn-sm" href="/Categoria/Editar/${c.codCat}">Editar</a>
                       <a class="btn btn-danger btn-sm" href="/Categoria/Excluir/${c.codCat}">Excluir</a>
                   </td>
             </tr>
            `
        });
        }
        else
        {
          document.querySelector("table").style.display = "none";
          /*    div.innerHTML = "<p> Nenhum produto encontrado </p>";
                Opção
          */
            div.style.display = "block";
            div.style.textAlign = "Center";

            const p = document.createElement("p");
             p.textContent = "Categoria não encontrado";
             p.style.fontSize= "1.2rem";
             p.style.color = "red";
             p.style.fontWeight = "bold";
       
             div.append(p);


        }


    }
</script>