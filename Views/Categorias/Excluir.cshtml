@model MeuProjetoMVC.Models.Categoria
@{
    ViewData["Title"] = "Excluir Categoria";
}

<h2>Excluir Categoria</h2>

<div class="alert alert-danger">
    Tem certeza que deseja excluir a categoria <strong>@Model.NomeCategoria</strong>?
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="CodCat" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
