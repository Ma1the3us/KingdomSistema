@model MeuProjetoMVC.Models.Usuario
@{
    ViewData["Title"] = "Registrar Conta";
}

<div class="container mt-4">
    <h2>Registrar Conta</h2>

    @if (ViewBag.Erro != null)
    {
        <div class="alert alert-danger">@ViewBag.Erro</div>
    }

    <form asp-action="Registrar" method="post">
        <div class="mb-3">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" type="password" />
        </div>
        <div class="mb-3">
            <label>Confirmar Senha</label>
            <input name="confirmarSenha" class="form-control" type="password" />
        </div>
        <button type="submit" class="btn btn-success">Registrar</button>
        <a asp-action="Login" asp-controller="Auth" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
