@model MeuProjetoMVC.Models.Sub_Categoria
@{
    ViewData["Title"] = "Cadastrar Subcategoria";
    int codCat = ViewBag.CodCat;
}
<link href="~/css/form.css" rel="stylesheet" />

<h2>Cadastrar Subcategoria</h2>

<form asp-action="Cadastrar" method="post">
    <input type="hidden" asp-for="codCat" value="@codCat" />
    <div class="form-group">
        <label>Nome da Subcategoria</label>
        <input asp-for="nomeSubcategoria" class="form-control" />
    </div>

    <div id="dBtn">
        <button class="btn btn-success">Cadastrar</button>
        <a class="btn btn-secondary"
           asp-action="Index"
           asp-route-codCat="@codCat">
            Voltar
        </a>
    </div>
</form>
