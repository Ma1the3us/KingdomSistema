@model IEnumerable<MeuProjetoMVC.Models.Sub_Categoria>
@{
    ViewData["Title"] = "Subcategorias";
    int codCat = ViewBag.CodCat;
    var categoria = ViewBag.Categorias as List<SelectListItem>;
    var codCatModel = Model.FirstOrDefault();
}

<link href="~/css/lista.css" rel="stylesheet" />

<h2>Subcategorias de @(categoria?.FirstOrDefault()?.Text ?? "-")</h2>

@if (TempData["MensagemS"] != null)
{
    <div class="alert alert-success">@TempData["MensagemS"]</div>
}

@if (TempData["ErroS"] != null)
{
    <div class="alert alert-danger">@TempData["ErroS"]</div>
}

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.codSub</td>
                    <td>@item.nomeSubcategoria</td>

                    <td>
                        <form asp-action="Excluir"
                              method="post"
                              style="display:inline;"
                              onsubmit="return confirm('Deseja realmente excluir?');">

                            <input type="hidden" name="codSub" value="@item.codSub" />
                            <input type="hidden" name="codCat" value="@codCat" />

                            <button type="submit" class="btn btn-danger btn-sm" title="Excluir subcategoria"><img src="~/img/excluir.png" /></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhuma subcategoria encontrada.</p>
}

<div id="dBtn">
    <a class="btn btn-primary" asp-action="Cadastrar" asp-route-codCat="@codCat"> Nova Subcategoria </a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Categorias"> Voltar </a>
</div>