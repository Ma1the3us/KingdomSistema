@model MeuProjetoMVC.Models.Fornecedor
@{
    ViewData["Title"] = "Criar Fornecedor";
}
<link href="~/css/form.css" rel="stylesheet" />

<h2>Criar Fornecedor</h2>

<form asp-action="Criar" method="post" class="w-50">
    <div class="form-group mb-3">
        <label asp-for="CNPJ" class="form-label"></label>
        <input asp-for="CNPJ" class="form-control" />
        <span asp-validation-for="CNPJ" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>