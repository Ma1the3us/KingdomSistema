@model MeuProjetoMVC.Models.Usuario

@{
    ViewData["Title"] = "Desativar Usuário";
}

<link href="~/css/form.css" rel="stylesheet" />

<h2 class="text-center mt-4">Desativar Usuário</h2>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="CodUsuario" />

    <p class="text-warning text-center mb-3">
        Tem certeza que deseja desativar o usuário <strong>@Model.Nome</strong>?
    </p>

    <section>
        <div>
            <label>Código:</label>
            <p>@Model.CodUsuario</p>
        </div>

        <div>
            <label>Nome:</label>
            <p>@Model.Nome</p>
        </div>

        <div>
            <label>Email:</label>
            <p>@Model.Email</p>
        </div>

        <div>
            <label>Função:</label>
            <p>@Model.Role</p>
        </div>
    </section>

    <div class="mt-4 d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Confirmar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
