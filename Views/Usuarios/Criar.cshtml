@model MeuProjetoMVC.Models.Usuario
@{
    ViewData["Title"] = "Criar Usuário";
}
<link href="~/css/form.css" rel="stylesheet" />

<h2>Criar Usuário</h2>

<form asp-action="Criar" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div>
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" type="password" />
    </div>
       <div class="form-group">
        <label asp-for="ConfirmarSenha"></label>
        <input asp-for="ConfirmarSenha" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Telefone</label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div>
        <label>Foto:</label>
        <input type="file" name="capa" asp-for="Imagens"/>
        <span asp-validation-for="Imagens"></span>
    </div>

    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control">
            <option>Cliente</option>
            <option>Funcionario</option>
            <option>Admin</option>
        </select>
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Ativo"></label>
        <select asp-for="Ativo" class="form-control">
            <option value="S">Sim</option>
            <option value="N">Não</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}