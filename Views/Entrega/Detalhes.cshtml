<style>
    body {
        background: #0D1117;
        color: #E4E6EB;
        font-family: 'Inter', sans-serif;
        padding: 20px;
    }

    h2, h4 {
        font-weight: 700;
        color: #E4E6EB;
        margin-bottom: 20px;
    }

    .card {
        background: #161B22;
        border-radius: 16px;
        padding: 25px;
        margin-bottom: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        transition: 0.3s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.5);
        }

    p {
        font-weight: 500;
        color: #E4E6EB;
        margin-bottom: 10px;
    }

        p strong {
            color: #4FF1D5;
        }

    table {
        background: #12161E;
        border-radius: 12px;
        overflow: hidden;
    }

        table th {
            background: #1E2230;
            color: #E4E6EB;
            font-weight: 600;
        }

        table td {
            background: #161B22;
            color: #E4E6EB;
        }

    .table-bordered th, .table-bordered td {
        border: 1px solid #2A2E3C;
    }

    .btn-primary {
        background: linear-gradient(135deg, #5B4AF5, #7C43FF);
        color: white;
        border: none;
        font-weight: 600;
        border-radius: 12px;
        padding: 10px 22px;
        transition: 0.3s;
        margin-top: 20px;
        display: inline-block;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(91,74,245,0.55);
        }
</style>
<link href="~/css/lista.css" rel="stylesheet" />
<div class="container mt-4">
    <h2>Detalhes da Entrega</h2>

    <div class="card">
        <h4>Informações Gerais</h4>
        <p><strong>Código da Entrega:</strong> @Model.codEndereco</p>
        <p><strong>Valor Total:</strong> @Model.valorTotal</p>
        <p><strong>Nome do Cliente:</strong> @Model.Nome</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefone:</strong> @Model.Telefone</p>
    </div>

    @if (Model.TipoEndereco != null)
    {
        <div class="card">
            <h4>Endereço</h4>
            <p><strong>CEP:</strong> @Model.Cep</p>
            <p><strong>Logradouro:</strong> @Model.Logradouro</p>
            <p><strong>Bairro:</strong> @Model.Bairro</p>
            <p><strong>Cidade:</strong> @Model.Cidade</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
            <p><strong>Número:</strong> @Model.Numero</p>
            <p><strong>Complemento:</strong> @Model.Complemento</p>
            <p><strong>Tipo Endereço:</strong> @Model.TipoEndereco</p>
            @if (Model.TipoEndereco == "Apartamento")
            {
                <p><strong>Andar:</strong> @Model.Andar</p>
                <p><strong>Nome do Prédio:</strong> @Model.NomePredio</p>
            }
        </div>
    }

    <div class="card">
        <h4>Destinatário</h4>
        <p><strong>Nome:</strong> @Model.nomeDestinatario</p>
        <p><strong>Email:</strong> @Model.emailDestinatario</p>
    </div>

    <div class="card">
        <h4>Produtos</h4>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.nomeProduto</td>
                    <td>@Model.Quantidade</td>
                    <td>@Model.Valor</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a asp-action="CentralEntrega" asp-controller="Entrega" class="btn btn-primary">Voltar</a>
</div>