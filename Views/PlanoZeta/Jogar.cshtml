@model MeuProjetoMVC.Models.ZetaJogos

@{
    ViewData["Title"] = "Jogando " + Model.nomeJogo;
}

<a asp-action="ZetaJogos" asp-controller="PlanoZeta">Voltar</a>


<h2>@Model.nomeJogo</h2>
<p>Categoria Indicativa: @Model.classificacaoEtaria+</p>

<div class="game-container">
    <iframe src="~/@Model.caminhoJogo"
            class="game-frame"
            allowfullscreen
            webkitallowfullscreen
            mozallowfullscreen
            allow="fullscreen">
    </iframe>
</div>

<style>

.game-container {
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* proporção 16:9 */
    background: #000;
    overflow: hidden;
}

.game-frame {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
}

</style>